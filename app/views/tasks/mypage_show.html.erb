<div class="container">
  <h1>マイタスク</h1>
    <%= link_to 'New Task', new_task_path, class: 'btn btn-secondary', style: 'margin-left: 0px;' %>
      <div class="row">

      <% @tasks.each do |task| %>
        <% if task.user_id == current_user.id %>
        <div class="col-xs-12 col-md-6">
          <% if task.deadline >= DateTime.now %>
            <div  class="card bg-light mb-3" style="max-width: 20rem;">
            <ul>
              <div class="card-header">タスク</div>
              <li><%= task.title %></li>
              <li>期限：<%= task.deadline %></li>
              <li>担当者：<%= task.user.name %></li>
              <li>ステータス：<% if task.status == "1" %>
                              対応中
                            <% elsif task.status == "2" %>
                              未対応
                            <% elsif task.status == "3" %>
                              完了
                            <% end %>
              </li>
          <% else %>
            <div  class="card bg-light mb-3" style="max-width: 20rem; color: red;">
            <ul>
              <div class="card-header">タスク</div>
              <li><%= task.title %></li>
              <li>期限：<%= task.deadline %></li>
              <li>担当者：<%= task.user.name %></li>
              <li>ステータス：<% if task.status == "1" %>
                              対応中
                            <% elsif task.status == "2" %>
                              未対応
                            <% elsif task.status == "3" %>
                              完了
                            <% end %>
              </li>
            <% end %>

            <td><%= link_to '詳細', task, class: 'btn btn-secondary' %></td>
            <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-info' %></td>
            <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </ul>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>
</div>
