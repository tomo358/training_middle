<div class="container">
  <% if params[:action] == "new" %>
    <h1>新規タスク</h1>
  <% else %>
    <h1>タスク編集</h1>
  <% end %>

  <%= form_for(task) do |f| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :deadline %></br>
      <%= f.datetime_select :deadline, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :status %></br>
      <% if params[:action] == "new" %>
        <label><%= f.radio_button :status, 1 %>対応中</label>
        <label><%= f.radio_button :status, 2 %>未対応</label>
      <% elsif params[:action] == "edit" %>
        <label><%= f.radio_button :status, 1 %>対応中</label>
        <label><%= f.radio_button :status, 2 %>未対応</label>
        <label><%= f.radio_button :status, 3 %>完了</label>
      <% end %>
    </div>

    <div class="action">
      <% if params[:action] == "new" %>
        <%= f.submit '新規作成', class: 'btn btn-success' %>
        <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
      <% else %>
        <%= f.submit '更新', class: 'btn btn-success' %>
        <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  <% end %>
</div>
